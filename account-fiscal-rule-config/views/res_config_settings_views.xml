<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" id="tools">
                    <h2>Account Fiscal Rule</h2>
                     
                        <div class="row mt16 o_settings_container">                         
                            <div class="col-12 col-lg-6 o_setting_box">
                              <div class="col-12 o_setting_box">  
                              <div class="o_setting_left_pane">
                                <field name="module_account_product_fiscal_classification" class="oe_inline" />
                              </div>
                              <div class="o_setting_right_pane">                                    
                                    <label for="module_account_product_fiscal_classification"/> 
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                              </div>                            
                            </div>                            
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                                <div class="col-12 o_setting_box">                           
                                <div class="o_setting_left_pane">
                                    <field name="module_base_technical_user" class="oe_inline" />
                                </div>
                               
                                <div class="o_setting_right_pane">                                    
                                    <label for="module_base_technical_user" />
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                                </div> 
                                </div>                      
                        </div> 
                       </div>                                                 
                   </div>                  
                </xpath>
            </field>
        </record>
    </data>
</odoo>


                